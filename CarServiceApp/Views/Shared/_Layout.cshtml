<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CarServiceApp</title>
    <!-- Підключення Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Локальний CSS -->
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body style="background-color: #AFCFF1;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">CarServiceApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Головна</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Account", "Account")">Мій акаунт</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Privacy", "Home")">Приватність</a>
                    </li>
                    
                   


                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5" style="background-color: #CAE4FC">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p class="footer">&copy; 2024 - CarServiceApp - <a href="@Url.Action("Privacy", "Home")" class="nav-link">Приватність</a></p>
        </div>
    </footer>

    <!-- Підключення Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Рендеринг секції Scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
