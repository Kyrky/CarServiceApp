@model CarServiceApp.Models.Car

<div class="modal-header">
    <h5 class="modal-title" id="detailsModalLabel">Деталі автомобіля</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрити"></button>
</div>
<div class="modal-body">
    <img src="@(string.IsNullOrEmpty(Model.PhotoPath) ? "/content/def.png" : Model.PhotoPath)" class="img-fluid mb-3" alt="Фото автомобіля" />
    <p><strong>Марка:</strong> @Model.Brand</p>
    <p><strong>Модель:</strong> @Model.Model</p>
    <p><strong>Рік:</strong> @Model.Year</p>
    <p><strong>VIN:</strong> @Model.Vin</p>
    <p><strong>Тип двигуна:</strong> @Model.EngineType</p>

    @if (Model.RepairCase != null)
    {
        <p><strong>Історія ремонту:</strong> @Model.RepairCase.RepairHistory</p>
        <p><strong>Невирішені проблеми:</strong> @Model.RepairCase.UnresolvedIssues</p>
    }
    else
    {
        <p><em>Дані про ремонт відсутні.</em></p>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрити</button>
</div>
