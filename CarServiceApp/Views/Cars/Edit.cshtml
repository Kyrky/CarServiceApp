@model CarServiceApp.Models.Car

<h1 class="text-center">Редагувати автомобіль</h1>

<form asp-action="Edit" method="post">
    <div class="form-group mb-4">
        <input asp-for="Brand" class="form-control" placeholder="Марка" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <input asp-for="Model" class="form-control" placeholder="Модель" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <input asp-for="Year" class="form-control" placeholder="Рік" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <input asp-for="Vin" class="form-control" placeholder="VIN" />
        <span asp-validation-for="Vin" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <input asp-for="EngineType" class="form-control" placeholder="Тип двигуна" />
        <span asp-validation-for="EngineType" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <input asp-for="PhotoPath" class="form-control" placeholder="Шлях до фото" />
        <span asp-validation-for="PhotoPath" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <textarea asp-for="RepairCase.RepairHistory" class="form-control" rows="3" placeholder="Історія ремонту"></textarea>
        <span asp-validation-for="RepairCase.RepairHistory" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <textarea asp-for="RepairCase.UnresolvedIssues" class="form-control" rows="3" placeholder="Невирішені проблеми"></textarea>
        <span asp-validation-for="RepairCase.UnresolvedIssues" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>
